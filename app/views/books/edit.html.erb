<% if flash[:notice] %>
 <p class="notice text-center" style="color:green;"><%= flash[:notice] %></p>
<% end %>

<h2>Editing Book</h2>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

<% if @book.errors.any? %>
 <%= @book.errors.count %> errors prohibited this book from being saved:
 <ul>
     <% @book.errors.full_messages.each do |message| %>
     <li>
         <%= message %>
     </li>
    <% end %>
 </ul>
<% end %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>body</h4>
<%= f.text_area :body %>

<br><%= f.submit 'Update Book' %></br>

<%= link_to "Show", book_path(@book.id) %>
<%= link_to 'Back', "/books" %>

<% end %>
